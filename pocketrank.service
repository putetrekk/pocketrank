[Unit]
Description = pocketrank

[Service]
Type           = simple
User           = root
Group          = root
LimitNOFILE    = 4096
Restart        = always
RestartSec     = 5s
StandardOutput = append:/root/pocketrank/errors.log
StandardError  = append:/root/pocketrank/errors.log
ExecStart      = /root/pocketrank/pocketrank serve --http="0.0.0.0:8090"

[Install]
WantedBy = multi-user.target
